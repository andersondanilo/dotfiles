[module/ping]
type = custom/script
inherit = generic-format-style

exec = $HOME/.config/polybar/modules/measure-ping.py
tail = true
click-left = kill -USR1 %pid%

format-prefix = 


; ___
;  | . _ _  _
;  | || | |(/_
;

[module/date]
type = internal/date
inherit = generic-format-style
interval = 1

; Date format is "MM 月 DD 日", with a smaller font size used for
; the spaces to achieve a tighter spacing using a monospaced font.
date = %m%{T5} %{T-}%{F#404040}月%{F-}%{T5} %{T-}%d%{T5} %{T-}%{F#404040}日%{F-}
date-alt = %V%{T5} %{T-}%{F#404040}週%{F-}

time = %H:%M
time-alt = %H:%M:%S

label = %date%  %time%


;
; |\/| _  _|. _
; |  |(/_(_||(_|
;

[module/now-playing]
type = custom/script
inherit = generic-format-style

exec = $HOME/.config/polybar/modules/now-playing.py
tail = true

click-left = playerctl next
click-middle = playerctl play-pause
click-right = playerctl previous


